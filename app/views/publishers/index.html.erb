<% provide(:title, 'All publisher') %>
<h1>All Publisher</h1>

<%= form_tag publishers_path, method: :get do %>
 <div class="row">
 	<div class="col-md-4 col-md-offset-4">
  <div class="input-group">
  <%= form_tag(publishers_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Books", class: 'form-control' %>
    <span class="input-group-btn">
      <%= submit_tag "Search", class: 'btn btn-primary' %>
    </span>
  <% end %>
</div>
</div>
</div>
</br>

<% end %>
 <%= will_paginate %>
<ul class="publisher">
      <%= render @publishers %>
</ul>

<%= will_paginate %>
<% if logged_in? %>
	<% if current_user.admin? %>	
		<br><%= link_to "Add Publisher", new_publisher_path %></br>
		<br><%= link_to "Export to XLS", publishers_path(format: "xls") %></br>
<% end %>
<% end %>
