<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= form_tag(users_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search User" %>
  <%= submit_tag "Search" %>
  <% end %>
<%= will_paginate %>
<ul class="users">
  <%= render @users %>
</ul>
<%= will_paginate %>

<% if logged_in? %>
	<% if current_user.admin? %>	
		<%= link_to "Add User", new_user_path %>
		
	<% end %>
<% end %>