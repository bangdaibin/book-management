<% provide(:title, 'All Book') %>
<h1>All Book</h1>

<%= form_tag books_path, method: :get do %>
 <div class="row">
 	<div class="col-md-4 col-md-offset-4">
  <div class="input-group">
  <%= form_tag(books_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Books", class: 'form-control' %>
    <span class="input-group-btn">
      <%= submit_tag "Search", class: 'btn btn-primary' %>
    </span>
  <% end %>
</div>
</div>
</div>
</br>
</br>
<% end %>
<% if @books.count == 0 %>

	<h1>There are no books</h1>

<% else %>	
<div class="container">
	<div class="row">

		<% @books.each do |book| %>

			<div class="col-md-3">
				<a href="/books/<%= book.id %>">
					<%= image_tag book.book_img.url(:medium), class: "book" %>
					<p><%= book.title %></p>
				</a>
				
			</div>	

		<% end %>

	</div>
	
<% end %>	
<% if logged_in? %>
	<% if current_user.admin? %>	
		<br><%= link_to "Add Book", new_book_path %></br>
		<br><%= link_to "Export to XLS", books_path(format: "xls") %></br>
<% end %>
<% end %>